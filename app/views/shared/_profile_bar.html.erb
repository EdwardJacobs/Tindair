<div class="bg-danger profile-bar">
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "float-right text-white mt-2" %>
  <% if current_user.photos.attached? %>
    <%= link_to cl_image_tag(current_user.photos.first.key, width: '40px', height: '40px', class: 'profile-thumb rounded-circle mr-3'), edit_user_registration_path %>
  <% end %>
  <%= link_to "My Profile", edit_user_registration_path, class: "my-profile text-white" %>
</div>
