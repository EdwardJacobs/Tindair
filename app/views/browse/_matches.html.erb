<div class="container">
  <div class="row">
    <% @matches.each do |match| %>
    <div class="col-sm-4">
      <% if match.photo? %>
        <div class="match-tile" data-id="<%= match.id %>" style="background-image: url('<%= cl_image_path match.photo %>')">
        </div>
      <% else %>
        <div class="match-tile" data-id="<%= match.id %>" style="background-image: url('<%= image_path 'angela.jpg' %>')">
          <p class="text-white"><%= match.first_name %></p>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
