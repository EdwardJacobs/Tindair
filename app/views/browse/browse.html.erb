<div class="row">
  <div class="col-3 col-md-4 bg-white">
    <%= render 'shared/profile_bar' %>

    <ul class="nav nav-tinder-sidebar ml-4 mt-3 mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-messages" aria-selected="false">Messages</a>
      </li>

    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane ml-2 fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "browse/matches" %>
      </div>
      <div class="tab-pane ml-2 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <p>No messages to display.</p>
        </div>
      </div>
    </div>

  </div>

  <div class="col-9 col-md-8">
    <ul id="slides">
      <% @users.each_with_index do |user, i| %>
        <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
          <% if user.photo? %>
            <div class="image-carousel" style="background-image: url('<%= image_path user.photo %>')">
          <% else %>
            <div class="image-carousel" style="background-image: url('<%= image_path 'angela.jpg' %>')">
            </div>
          <% end %>

          <div class="user-details">
            <span class="user-name"><%= user.first_name %></span>, 31<br/>
            <i class="fa fa-graduation-cap mr-1"></i> Job /Studies <br/>
            <i class="fa fa-map-marker mr-3"></i> Location
          </div>
        </li>
      <% end %>
    </ul>
    <div id="slide-controls">
      <span class="controls" id="decline"><i class="fa fa-times-circle fa-2x"></i></span>
      <span class="controls" id="approve"><i class="fa fa-heart fa-2x"></i></span>
    </div>
  </div>
</div>

<% @users.each do |user| %>
  <% if user.photo? %>
    <%= cl_image_tag user.photo %>
  <% end %>
<% end %>
