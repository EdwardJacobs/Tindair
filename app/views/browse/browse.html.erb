<div class="row">
  <div class="col-md-4 bg-white">
    <%= render 'shared/profile_bar' %>

    <ul class="nav nav-tinder-sidebar ml-5 mt-3 mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-messages" aria-selected="false">Messages</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane ml-4 fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "browse/matches" %>
      </div>
      <div class="tab-pane ml-4 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <%= render partial: 'conversations/list' %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-9 col-md-8">
    <ul id="slides">
      <% @users.each_with_index do |user, i| %>
        <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
          <% if user.photos.attached? %>
            <div class="image-carousel" style="background-image: url('<%= cl_image_path user.photos.first.key %>')"></div>
          <% end %>

          <div class="user-details">
            <span class="user-name"><%= user.first_name %></span>, 31<br/>
            <i class="fa fa-graduation-cap mr-1"></i> Job /Studies <br/>
            <i class="fa fa-map-marker mr-3"></i> Location
          </div>
        </li>
      <% end %>
    </ul>
    <div id="slide-controls">
      <div id="decline" class="d-inline-block fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x text-white"></i>
        <i class="fa fa-times fa-stack-1x text-danger"></i>
      </div>
      <div id="approve" class="d-inline-block fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x text-white"></i>
        <i class="fa fa-heart fa-stack-1x text-success"></i>
      </div>
    </div>

    <div id="conversation">
      <%= render "browse/conversation" %>
    </div>
  </div>
</div>




