<div id="conversation">
  <div class="row">
    <div class="col-12 top-bar">
      <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>
      <% if @users.first.photo.attached? %>
        <%= link_to cl_image_tag(@users.first.photo.key, width: '40px', height: '40px', class: 'float-left profile-thumb rounded-circle mr-3'), "#" %>
      <% end %>
      <p class="text-muted mt-2">You matched with <%= @users.first.first_name %> on <%= @users.first.created_at.strftime("%m/%d/%Y") %>.</p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <p class="mt-3">You matched with <span><%= @users.first.first_name %> </span><%= time_ago_in_words @users.first.created_at %> ago.</p>
      <% if @users.first.photo.attached? %>
        <%= link_to cl_image_tag(@users.first.photo.key, width: '200px', height: '200px', class: 'rounded-circle mt-3 mb-5'), "#" %>
      <% end %>
      <p>Send them a message and make them smile :) </p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-5 bottom-bar">
      <form>
        <div class="input-group">
          <input type="text" name="message" value="" placeholder="Enter your message and press send" class="form-control form-control-lg">

          <div class="input-group-append">
            <input type="submit" name="submit" value="Send" class="btn btn-success btn-lg pl-5 pr-5">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
