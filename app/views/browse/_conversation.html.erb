<div class="row">
  <div class="col-12 top-bar">
    <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>
    <% if @profile && @profile.photo.attached? %>
      <%= link_to cl_image_tag(@profile.photo.key, width: '40px', height: '40px', class: 'float-left profile-thumb rounded-circle mr-3'), "#" %>
      <p class="text-muted mt-2">You matched with <%= @profile.first_name %> on <%= @match.created_at.strftime("%m/%d/%Y") %>.</p>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-12 text-center">
    <% if @profile && @profile.photo.attached? %>
      <p class="mt-3">You matched with <span><%= @profile.first_name %> </span><%= time_ago_in_words @profile.created_at %> ago.</p>
      <%= link_to cl_image_tag(@profile.photo.key, width: '200px', height: '200px', class: 'rounded-circle mt-3 mb-5'), "#" %>
    <% end %>
    <p>Send them a message and make them smile :) </p>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-5 bottom-bar">
    <%= form_with model: @conversation do |form| %>
      <%= form.hidden_field :recipient_id, value: @profile.id if @profile %>
      <div class="input-group">
        <%= form.fields_for :messages, @message do |message_form| %>
          <%= message_form.text_field :body, placeholder: "Enter your message and press send", class: "form-control form-control-lg" %>
        <% end %>

        <div class="input-group-append">
          <input type="submit" name="submit" value="Send" class="btn btn-success btn-lg pl-5 pr-5">
        </div>
      </div>
    <% end %>
  </div>
</div>

